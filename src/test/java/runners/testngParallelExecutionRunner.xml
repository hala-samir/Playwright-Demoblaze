<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="listeners.ExtentReportListener" />
    </listeners>
    <test name="Home page test scenarios">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.HomePageTest"></class>
        </classes>
    </test>
    <test name="Add to cart test scenarios">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.AddToCartTest"></class>
        </classes>
    </test>
    <test name="Contact us test scenarios">
        <parameter name="browser" value="chromium"/>
        <classes>
            <class name="tests.ContactUSTest"></class>
        </classes>
    </test>
</suite>